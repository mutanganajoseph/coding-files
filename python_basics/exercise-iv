import itertools

def count_inversions(perm):
    count = 0
    for i in range(len(perm)):
        for j in range(i + 1, len(perm)):
            if perm[i] > perm[j]:
                count += 1
    return count

def permutation_sign(n):
    perms = list(itertools.permutations(range(1, n+1)))
    sign_dict = {}

    for perm in perms:
        sign = (-1) ** count_inversions(perm)
        sign_dict[perm] = sign
    
    return len(perms), sign_dict

n = int(input("Enter a number: "))

num_permutations, signs = permutation_sign(n)

print(f"Total permutations: {num_permutations}")
for perm, sign in signs.items():
    print(f"{perm}: Sign = {sign}")
